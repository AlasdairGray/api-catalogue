<h1 id="<%= organisation.name.parameterize %>"><%= organisation.name %></h1>

<p>The API catalogue contains the following <%= apis.count %> <%= organisation.name %> (<%= organisation.alternate_name %>) <%= 'API'.pluralize(apis.count) %>:</p>

<ul class="apis-list">
  <% apis.each do |api| %>
    <li>
      <div class="api-summary">
        <h2 class="govuk-heading-s">
          <%= link_to api.name, api_path(organisation: organisation, api: api) %>
        </h2>
        <%= text_snippet(api.description) %>
      </div>
    </li>
  <% end %>
</ul>
